{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "clearDist": "rm -rf dist",
    "compile": "tsc",
    "build": "npm run clearDist && npm run compile",
    "start": "node ./dist/index.js",
    "dev": "nodemon --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/index.ts"
  },
  "nodemonConfig": {
    "ignore": [
      "**/tests/**"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "watch": "./**/*.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.3.0",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.17",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
